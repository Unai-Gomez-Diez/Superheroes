<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imagenPrin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/nombreHeroe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagenPrin"
        app:layout_constraintStart_toStartOf="@id/imagenPrin"
        android:textSize="20dp"
        tools:text="Super Man"
    />

    <TextView
        android:id="@+id/buenomalo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagenPrin"
        app:layout_constraintEnd_toEndOf="@id/imagenPrin"
        android:textColor="@color/blue"
        android:textSize="20dp"
        tools:text="GOOD"
        />

    <TextView
        android:id="@+id/nombreReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/nombreHeroe"
        app:layout_constraintTop_toBottomOf="@id/nombreHeroe"
        tools:text="rrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrr" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/nombreReal"
        app:layout_constraintTop_toBottomOf="@id/nombreReal"
        tools:text="rrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrr"
        />


    <TextView
        android:id="@+id/inteligencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/descripcion"
        app:layout_constraintTop_toBottomOf="@id/descripcion"
        android:layout_margin="50dp"
        android:text="@string/inteligencia"/>

    <TextView
        android:id="@+id/inteligenciaValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/inteligencia"
        app:layout_constraintEnd_toEndOf="@id/inteligencia"
        app:layout_constraintTop_toBottomOf="@id/inteligencia"

        tools:text="10"/>
    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/inteligencia"
        app:layout_constraintBottom_toBottomOf="@id/inteligenciaValor"
        app:layout_constraintStart_toEndOf="@id/inteligencia"
        app:layout_constraintEnd_toStartOf="@+id/speed"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/inteligencia"
        app:layout_constraintTop_toBottomOf="@id/descripcion"
        android:layout_margin="50dp"
        android:text="@string/speed"/>

    <TextView
        android:id="@+id/speedValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/speed"
        app:layout_constraintEnd_toEndOf="@id/speed"
        app:layout_constraintTop_toBottomOf="@id/speed"
        tools:text="10"/>

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/inteligencia"
        app:layout_constraintBottom_toBottomOf="@id/inteligenciaValor"
        app:layout_constraintStart_toEndOf="@id/speed"
        app:layout_constraintEnd_toStartOf="@+id/combat"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/combat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/speed"
        app:layout_constraintTop_toBottomOf="@id/descripcion"
        android:layout_margin="50dp"
        android:text="@string/combat"/>

    <TextView
        android:id="@+id/combatValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/combat"
        app:layout_constraintEnd_toEndOf="@id/combat"
        app:layout_constraintTop_toBottomOf="@id/combat"
        tools:text="10"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/inteligencia"
        app:layout_constraintEnd_toEndOf="@id/combatValor"
        app:layout_constraintTop_toBottomOf="@id/inteligenciaValor"
        tools:listitem="@layout/view_heroimage_item"/>


</androidx.constraintlayout.widget.ConstraintLayout>